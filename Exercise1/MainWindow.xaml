<Window x:Class="Exercise1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise1"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <ListBox x:Name="listBox"
                 Margin="286,0,286,10"
                 ItemsSource="{Binding People}"
                 SelectedItem="{Binding Path = SelectedPerson}"
                 DisplayMemberPath="Fullname"
                 SelectionChanged="SelectionChanged" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="292,310,0,0"
                   Text="Fornavn: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="292,331,0,0"
                   Text="Efternavn: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="292,352,0,0"
                   Text="Email: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="292,373,0,0"
                   Text="Telefonnr: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock x:Name="selectedFirstName"
                   HorizontalAlignment="Left"
                   Margin="353,310,0,0"
                   Text="{Binding  Path = SelectedPerson.Firstname}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="139" />
        <TextBlock x:Name="selectedLastName"
                   HorizontalAlignment="Left"
                   Margin="353,331,0,0"
                   Text="{Binding Path = SelectedPerson.Lastname}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="139" />
        <TextBlock x:Name="selectedEmail"
                   HorizontalAlignment="Left"
                   Margin="353,352,0,0"
                   Text="{Binding Path = SelectedPerson.Email}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="139" />
        <TextBlock x:Name="selectedPhoneNumber"
                   HorizontalAlignment="Left"
                   Margin="353,373,0,0"
                   Text="{Binding Path = SelectedPerson.PhoneNumber}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="139" />
    </Grid>
</Window>
