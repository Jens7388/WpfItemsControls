<Window x:Class="Exercise1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise1"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <ListBox x:Name="listBox"
                 Margin="286,0,286,10"
                 ItemsSource="{Binding People}"
                 SelectedItem="{Binding Path = SelectedPerson}"
                 DisplayMemberPath="Fullname"
                 SelectionChanged="SelectionChanged" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="292,310,0,0"
                   Text="Fornavn: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="292,331,0,0"
                   Text="Efternavn: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="292,352,0,0"
                   Text="Email: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="292,373,0,0"
                   Text="Telefonnr: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock x:Name="selectedFirstName"
                   HorizontalAlignment="Left"
                   Margin="353,310,0,0"
                   Text="{Binding  Path = SelectedPerson.Firstname}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="139" />
        <TextBlock x:Name="selectedLastName"
                   HorizontalAlignment="Left"
                   Margin="353,331,0,0"
                   Text="{Binding Path = SelectedPerson.Lastname}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="139" />
        <TextBlock x:Name="selectedEmail"
                   HorizontalAlignment="Left"
                   Margin="353,352,0,0"
                   Text="{Binding Path = SelectedPerson.Email}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="139" />
        <TextBlock x:Name="selectedPhoneNumber"
                   HorizontalAlignment="Left"
                   Margin="353,373,0,0"
                   Text="{Binding Path = SelectedPerson.PhoneNumber}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="139" />
        <Rectangle HorizontalAlignment="Left"
                   Height="202"
                   Margin="582,124,0,0"
                   Fill="LightGray"
                   Stroke="Black"
                   VerticalAlignment="Top"
                   Width="218" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="645,124,0,0"
                   Text="Tilføj ny person:"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="591,183,0,0"
                   Text="Fornavn: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="591,207,0,0"
                   Text="Efternavn: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   RenderTransformOrigin="0.485,0.579" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="591,233,0,0"
                   Text="Email: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="591,257,0,0"
                   Text="Telefonnr: "
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <Button Content="Tilføj"
                HorizontalAlignment="Left"
                Margin="679,292,0,0"
                VerticalAlignment="Top"
                Height="34"
                Width="70"
                Click="Button_Click" />
        <TextBox HorizontalAlignment="Left"
                 x:Name="firstNameInput"
                 Margin="652,183,0,0"
                 Text=""
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="138"
                 Height="16" />
        <TextBox HorizontalAlignment="Left"
                 x:Name="lastNameInput"
                 Margin="652,207,0,0"
                 Text=""
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="138"
                 Height="16" />
        <TextBox HorizontalAlignment="Left"
                 x:Name="emailInput"
                 Margin="652,233,0,0"
                 Text=""
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="138"
                 Height="16" />
        <TextBox HorizontalAlignment="Left"
                 x:Name="phoneNumberInput"
                 Margin="652,257,0,0"
                 Text=""
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="138"
                 Height="16" />
    </Grid>
</Window>
